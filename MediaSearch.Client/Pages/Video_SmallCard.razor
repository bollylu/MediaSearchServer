<div class="container">
  <div class="card mb-4 ">
    <div class="card-header">
      <span class="h4">@HeaderText</span>
    </div>
    <div class="card-body">
      <div class="card-title">@BodyTitle</div>

      <div class="row">
        <div class="fixed">
          @if (IsImageLoaded)
          {
            <div class="card-img-top">
              <img src="@ImageSource" width="160" />
            </div>
          }
          else
          {
            <Loading Message="..." />
          }
        </div>
        <div class="col">
          <div class="card-subtitle">@BodySubTitle</div>
          <div class="card-text">@BodyText</div>
        </div>
      </div>


    </div>
    @if (!string.IsNullOrEmpty(FooterLink))
    {
      <div class="card-footer">
        @foreach(string TagItem in Movie.Tags) {
          <span class="badge rounded-pill bg-info text-light">@TagItem</span>
        }
        <div class="card-link">@FooterLink</div>
      </div>
    }
  </div>
</div>
