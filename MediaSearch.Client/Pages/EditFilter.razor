@using MediaSearch.Models

<div class="FilterEdit">

  <EditForm Model="@Filter" OnSubmit="_ProcessSearch">

    <div class="row m-2">

      <div class="col-6 align-self-center">
        <div class="input-group">
          <span class="input-group-text">Keywords</span>
          <InputText type="text" @bind-Value="@Filter.Name" class="form-control" />
        </div>
      </div>

      <div class="col-2 align-self-center form-check-inline">
        <label>Keywords selection</label>
        <InputRadioGroup @bind-Value="@Filter.KeywordsSelection">
          <InputRadio Value=EFilterKeywords.All /> All
          <InputRadio Value=EFilterKeywords.Any /> Any
        </InputRadioGroup>
      </div>

      <div class="col-3 align-self-center form-check-inline">
        <label>Added during </label>
        <InputRadioGroup @bind-Value="@Filter.DaysBack">
          <InputRadio Value="7" /> Last 7 days
          <InputRadio Value="15" /> Last 15 days
          <InputRadio Value="0" /> All
        </InputRadioGroup>
      </div>

      <div class="col align-self-center">
        <input type="submit" class="btn btn-primary" value="Filter" />
      </div>

    </div>

  </EditForm>

</div>

