@using MediaSearch.Models

<div class="FilterEdit">

  <EditForm Model="@Filter" OnSubmit="_ProcessSearch">

    <div class="row m-2">

      <div class="col-4 align-self-center">
        <div class="input-group">
          <span class="input-group-text">Keywords</span>
          <InputText type="text" @bind-Value="@Filter.Keywords" class="form-control" />
        </div>
      </div>

      <div class="col-2 align-self-center">
        <div class="form-check-input" type="radio">
          <span class="form-check-label">Selection</span>
          <InputRadioGroup @bind-Value="@Filter.KeywordsSelection" >
            <InputRadio Value=EFilterType.All class="form-check-input"/> All
            <InputRadio Value=EFilterType.Any class="form-check-input"/> Any
          </InputRadioGroup>
        </div>
      </div>

      <div class="col-5 align-self-center form-check-inline">
        <label>Added during </label>
        <InputRadioGroup @bind-Value="@Filter.DaysBack">
          <InputRadio Value="7" /> Last 7 days
          <InputRadio Value="15" /> Last 15 days
          <InputRadio Value="0" /> All
        </InputRadioGroup>
      </div>

      <div class="col align-self-center">
        <input type="submit" class="btn btn-primary" value="Filter" />
      </div>

    </div>

  </EditForm>

</div>

