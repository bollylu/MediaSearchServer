@using MediaSearch.Models;

<table class="table table-striped table-hover">
  <thead class="table-light">
    <tr>
      <th scope="col" width="40%">Name</th>
      <th scope="col" width="8%">Year</th>
      <th scope="col" width="10%">Size (GB)</th>
      <th scope="col" width="42%">Path</th>
    </tr>
  </thead>
  <tbody>
    @foreach (IMovie MovieItem in (MoviesPage ?? TMoviesPage.Empty).Movies) {
      <tr class="border-bottom" height="64px">
        <td scope="row">
          @MovieItem.Name
        </td>
        <td>
          <span class="badge rounded-pill bg-danger text-light">@MovieItem.OutputYear</span>
        </td>
        <td class="text-end">
          @DisplayConverters.DisplaySizeInUnit(MovieItem.Size)
        </td>
        <td>
          @MovieItem.StoragePath.BeforeLast("/")
        </td>
      </tr>
    }
  </tbody>
</table>
