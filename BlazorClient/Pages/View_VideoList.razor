@using MovieSearchClientModels
@using MovieSearchModels

@if (Movies is not null) {

  <div class="card col-12">

    <div class="card-header">
      <table class="VideoList col-12">
        <tr>
          <td class="col-4 text-center align-middle">
            <table class="col-12">
              <tr>
                <td class="col-2"><button type="button" class="btn btn-block btn-outline-secondary m-1" @onclick="RefreshHome" disabled="@BackDisabled">>&lt;&lt;</button></td>
                <td class="col-2"><button type="button" class="btn btn-block btn-outline-secondary m-1" @onclick="RefreshPrevious" disabled="@BackDisabled">&lt;</button></td>
                <td class="col-4 ActualPage h3 align-middle text-center">(@Pagination)</td>
                <td class="col-2"> <button type="button" class="btn btn-block btn-outline-secondary m-1" @onclick="RefreshNext" disabled="@NextDisabled">&gt;</button></td>
                <td class="col-2"> <button type="button" class="btn btn-block btn-outline-secondary m-1" @onclick="RefreshEnd" disabled="@NextDisabled">>&gt;&gt;</button></td>
              </tr>
            </table>
          </td>
          <td class="col-4 text-center align-middle">
            <span class="font-weight-bold h3 text-center align-middle">@MoviesTitle</span>
          </td>
          <td class="col-2"><button type="button" class="btn btn-block btn-outline-secondary m-1" @onclick="ViewList">List</button></td>
          <td class="col-2"><button type="button" class="btn btn-block btn-outline-secondary m-1" @onclick="ViewCard">Card</button></td>
        </tr>
      </table>
    </div>

    <div class="card-body">

      @switch (ViewType) {

        case EViewType.Card:
          <div class="VideoList col-12">
            <div class="row row-cols-2 border-bottom">
              @foreach (IMovie MovieItem in Movies.Movies) {

                <div class="col">
                  <Video_SmallCard Movie="@MovieItem" />
                </div>
              }
            </div>

          </div>
          break;

        case EViewType.List:
          <div class="container">

            @foreach (IMovie MovieItem in Movies.Movies) {
              <div class="row border-bottom">
                <div class="col">
                  <Video_item Movie="@MovieItem" />
                </div>
              </div>
            }

          </div>
          break;
      }




    </div>
  </div>
}
