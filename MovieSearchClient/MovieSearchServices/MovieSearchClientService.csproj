<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <RootNamespace>MovieSearchClient.Services</RootNamespace>
    <AssemblyName>MovieSearchClientServices</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="IApiServer.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="sample-data\groups.json" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="sample-data\groups.json">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BLTools" Version="4.5.27" />
    <PackageReference Include="System.Net.Http.Json" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\MoviesearchShared\MovieSearchModels\MovieSearchModels.csproj" />
  </ItemGroup>

</Project>
